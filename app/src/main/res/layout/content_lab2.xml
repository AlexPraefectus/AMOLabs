<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_lab2"
        tools:context=".lab2.Lab2Activity" android:id="@+id/lab3ReadFromFile">

    <TextView
            android:text="Дані:"
            android:layout_width="111dp"
            android:layout_height="232dp"
            android:id="@+id/lab2TextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="228dp" android:textSize="24sp" android:scrollbars="vertical"/>
    <EditText
            android:layout_width="111dp"
            android:layout_height="200dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/lab2ArrayInput" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="228dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/lab2TextView" android:hint="Масив для сортування"/>
    <Switch
            android:text="Сортування за Спаданням"
            android:layout_width="175dp"
            android:layout_height="57dp"
            android:id="@+id/lab2switchDescending"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <Switch
            android:text="Оптимізація сортування"
            android:layout_width="175dp"
            android:layout_height="57dp"
            android:id="@+id/lab2SwitchOptimization" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/lab2switchDescending"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
    />
    <Button
            android:text="Зчитати Дані"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:id="@+id/lab2ButtonRead"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/lab2ButtonSort"/>
    <Button
            android:text="Відсортувати"
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:id="@+id/lab2ButtonSort"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/lab2SwitchOptimization"
    />
    <Button
            android:text="Зчитати З Файлу"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:id="@+id/lab2ButtonFile" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lab2ButtonRead" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp"/>
</android.support.constraint.ConstraintLayout>